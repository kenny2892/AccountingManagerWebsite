@model IEnumerable<AccountingWebsite.Models.Vendor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransactionKeyphrases)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiptKeyphrases)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiptTotalKeyphrases)
            </th>
