        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionKeyphrases)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptKeyphrases)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptTotalKeyphrases)
            </td>
